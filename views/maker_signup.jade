extends layout

block content
	script.
		$(document).ready( function() {
			$('#is-teacher').change( function() {
				if( this.checked ) {
					console.log("teacher");
					$('#teacher-div').slideDown();
				} else {
					console.log("not a teacher");
					$('#teacher-div').slideUp();
				}
			});
			$('#is-parent').change( function() {
				if( this.checked ) {
					$('#parent-div').slideDown();
				} else {
					$('#parent-div').slideUp();
				}
			});
			$('#is-business-owner').change( function() {
				if( this.checked ) {
					$('#business-owner-div').slideDown();
				} else {
					$('#business-owner-div').slideUp();
				}
			});
		});


	div.container
		h4 Maker Signup
		br
		html.
			<form class="form-horizontal" role="form">

				<h5>Tell us about yourself</h5>
				<div class="form-group">
					<label class="control-label col-sm-2" for="name">Name</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="name" placeholder="Enter name">
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2" for="email">Email</label>
					<div class="col-sm-10">
						<input type="email" class="form-control" id="email" placeholder="Enter email">
					</div>
				</div>
				<div class="form-group"> 
					<div class="col-sm-offset-2 col-sm-10">
						<div class="checkbox">
							<label><input id="is-teacher" type="checkbox">I am a teacher in the SOMA school district</label>
						</div>
					</div>
				</div>
				<div id="teacher-div" style="display:none">
					<div class="form-group">
						<label class="control-label col-sm-2" for="email">Grade</label>
						<div class="col-sm-10">
							<select id="grade">
								<option value="na"></option>
								<option value="k">kindergarten</option>
								<option value="1">first grade</option>
								<option value="2">second grade</option>
								<option value="3">third grade</option>
								<option value="4">forth grade</option>
								<option value="5">fifth grade</option>
								<option value="6">sixth grade</option>
								<option value="7">seventh grade</option>
								<option value="8">eight grade</option>
								<option value="9">nineth grade</option>
								<option value="10">tenth grade</option>
								<option value="11">eleventh grade</option>
								<option value="12">twelfth grade</option>
							</select>
						</div>
					</div>
					<div class="form-group"> 
						<label class="control-label col-sm-2" for="subject">Subject</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="subject">
						</div>
					</div>
				</div>

				<div class="form-group"> 
					<div class="col-sm-offset-2 col-sm-10">
						<div class="checkbox">
							<label><input id="is-parent" type="checkbox">I am a parent in the SOMA school district</label>
						</div>
					</div>
				</div>
				<div id="parent-div" style="display:none">
					<div class="form-group">
						<label class="control-label col-sm-2" for="name">School(s)</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="school" placeholder="Enter school">
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-2" for="name">Kid's ages)</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="school" placeholder="Enter kid's ages">
						</div>
					</div>
				</div>

				<div class="form-group"> 
					<div class="col-sm-offset-2 col-sm-10">
						<div class="checkbox">
							<label><input id="is-business-owner" type="checkbox">I am an owner/manager of a local business</label>
						</div>
					</div>
				</div>
				<div id="business-owner-div" style="display:none">
					<div class="form-group">
						<label class="control-label col-sm-2" for="business-name">Business Name</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="business" placeholder="Enter Business Name">
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-2" for="business-desc">Business Description</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="school" placeholder="Enter Business Description">
						</div>
					</div>
				</div>
				<div class="form-group"> 
					<div class="col-sm-offset-2 col-sm-10">
						<div class="checkbox">
							<label><input id="is-community-member" type="checkbox">I am an interested community member</label>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2">Participation</label>
					<label class="control-label col-sm-10 right-col">How would you like to participate in Maker Madness?</label>
				</div>
				<hr>
				<div class="form-group">
					<label class="control-label col-sm-2"></label>
					<div class="col-sm-10">
						<select id="participate">
							<option value="na"></option>
							<option value="mentor">I would like to be a maker mentor (run a station)</option>
							<option value="sponsor">I would like to sponsor a station ($300 or equivalent in supplies)</option>
							<option value="volunteer-maker">I would like to volunteer to help at a station run by another mentor</option>
							<option value="volunteer-other">I want to volunteer at the event in another way (set-up, concessions, concierge, etc)</option>
						</select>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2">Project Description</label>
					<label class="control-label col-sm-10" for="business-desc">
						Describe the project youâ€™d like to lead or let us know your general area of interest. We 
						have lots of ideas or can help you to refine yours if you like. We also have 
						planned stations that need extra pairs of hands. Let us know how you want to help and we 
						will find a way to use your skills.
					</label>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2"></label>
					<div class="col-sm-10">
						<textarea rows="5" cols="50" class="form-control" id="desired-project-description" placeholder="Enter Desired Project Description">
					</div>
				</div>


				<div class="form-group"> 
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-default">Submit</button>
					</div>
				</div>
			</form>


